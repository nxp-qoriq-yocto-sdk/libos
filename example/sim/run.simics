#
# Script to run simple guest on bare metal on simulator
#

# simple guest
$kernel_image  = "example.bin"
$kernel_addr = 0x10000000
$dtb_image = ""
$binary_image = "true"

$use_uart2 = 0

# indicate that simics magic instructions are wanted
$want_magic_inst = 1

add-directory "../bin" -prepend
add-directory "./bin" -prepend

run-command-file "%script%/hvsim.include"

